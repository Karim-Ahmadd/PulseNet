<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Clinic</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/form_login.css">
</head>

<body>
    <%- include("background.ejs") %>
    <form class="form" action="/admin/clinics/add" method="post" enctype="multipart/form-data">
        <h3 class="form-h3">Add Clinic</h3>
        <h4>Name and Address</h4>
        <div class="mb-3">
            <label for="name" class="form-label">Clinic Name: </label>
            <input type="text" class="form-control <% if(locals.errors && errors["name"]) {%> is-invalid<%}%>"
                id="name" name="clinic_name">

                <% if(locals.errors && errors["name"]) {%>
                    <div class="invalid-feedback">
                        <%= errors["name"] %>
                    </div>
                    <%}%>

        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address: </label>
            <input type="text" class="form-control <% if(locals.errors && errors["address"]) {%> is-invalid<%}%>"
                id="address" name="clinic_address">

                <% if(locals.errors && errors["address"]) {%>
                    <div class="invalid-feedback">
                        <%= errors["address"] %>
                    </div>
                <%}%>
        </div>

        <hr>
        <h4>Contact Info</h4>
        <div class="mb-3">
            <label for="phone" class="form-label">Phone: </label>
            <input type="text" class="form-control <% if(locals.errors && errors["phone"]) {%> is-invalid<%}%>"
                id="phone" name="clinic_phone">

                <% if(locals.errors && errors["phone"]) {%>
                    <div class="invalid-feedback">
                        <%= errors["phone"] %>
                    </div>
                <%}%>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email: </label>
            <input type="text" class="form-control <% if(locals.errors && errors["email"]) {%> is-invalid<%}%>" id="email" name="clinic_email">

            <% if(locals.errors && errors["email"]) {%>
                <div class="invalid-feedback">
                    <%= errors["email"] %>
                </div>
            <%}%>
        </div>
        <hr>
        <h4>Description</h4>
        <div class="mb-3">
            <label for="description" class="form-label">Description: </label>
            <textarea class="form-control <% if(locals.errors && errors["description"]) {%> is-invalid<%}%>" id="description" name="clinic_description" rows="5"></textarea>

            <% if(locals.errors && errors["description"]) {%>
                <div class="invalid-feedback">
                    <%= errors["description"] %>
                </div>
            <%}%>
        </div>
        <hr>
        <h4>Logo Image</h4>
        <div class="mb-3">
            <input type="file" class="form-control" aria-label="logo" name="file">
            <div class="invalid-feedback">Example invalid form file feedback</div>
          </div>
        <div class="btn-container">
            <button type="submit" class="myButton">Add Clinic</button>
        </div>

    </form>
</body>

</html>