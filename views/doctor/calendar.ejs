<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Schedule</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/doctor.css" />
    <link rel="stylesheet" href="/css/schedule_form.css" />
    <style> a{ color: black; text-decoration: none;}
        </style>
  </head>

  <body>
    <%- include("sidebar.ejs") %>
    <div class="right-side">
      <div class="header">
        <div>
          <%- include("profile_dropdown.ejs") %>
          <button class="btn-show" onclick="show()">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              fill="currentColor"
              class="bi bi-list"
              viewBox="0 0 16 16"
            >
              <path
                fill-rule="evenodd"
                d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"
              />
            </svg>
          </button>
        </div>
      </div>
      <div class="right-side-body">
        <h1>Calendar</h1>
        <% if (locals.errors) { for(const key of Object.keys(errors)) { %>
        <div class="alert alert-danger" role="alert"><%= errors[key] %></div>
        <% } }%>

        <div id="calendar"></div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.js"></script>
    <script>
        const eventsFromServer = <%- JSON.stringify(events) %>;
      document.addEventListener("DOMContentLoaded", function () {
        var calendarEl = document.getElementById("calendar");
        var calendar = new FullCalendar.Calendar(calendarEl, {
         timeZone: "Asia/Beirut",
          initialView: "dayGridMonth",
          dayMaxEvents: true,
          headerToolbar: {
            left: "prev,next today",
            center: "title",
            right: "dayGridMonth,timeGridWeek,timeGridDay",
          },
          events: eventsFromServer
        });
        calendar.render();
      });
    </script>
  </body>
</html>
